# =========================================
# BINANCE API CONFIGURATION
# =========================================

# API Keys da Binance
# Obtenha em: https://testnet.binance.vision/ (Testnet)
# Ou: https://www.binance.com (Produção - NÃO RECOMENDADO inicialmente)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# =========================================
# TRADING CONFIGURATION
# =========================================

# Use Testnet? (True = Testnet, False = Produção)
# SEMPRE comece com True!
USE_TESTNET=True

# Futures ou Spot? (True = Futures, False = Spot)
IS_FUTURES=False

# Par principal para trading
PRIMARY_SYMBOL=BTCUSDT

# =========================================
# RISK MANAGEMENT
# =========================================

# Loss máximo diário em USD
MAX_DAILY_LOSS=100.0

# Tamanho máximo de posição (% do capital)
# 0.01 = 1% do capital
MAX_POSITION_SIZE=0.01

# Risco por trade (% do capital)
# 0.01 = 1% do capital em risco
RISK_PER_TRADE=0.01

# =========================================
# TELEGRAM NOTIFICATIONS (Optional)
# =========================================

# Token do bot Telegram
# Crie um bot com @BotFather no Telegram
TELEGRAM_BOT_TOKEN=

# ID do chat para receber notificações
# Use @userinfobot no Telegram para obter seu chat_id
TELEGRAM_CHAT_ID=

# =========================================
# STRATEGY CONFIGURATION (Optional)
# =========================================

# Tipo de estratégia: sma ou rsi
STRATEGY_TYPE=sma

# Parâmetros da estratégia SMA
SMA_FAST_PERIOD=9
SMA_SLOW_PERIOD=21
SMA_MIN_SCORE=70

# Parâmetros da estratégia RSI
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# =========================================
# LOGGING
# =========================================

# Nível de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =========================================
# NOTES
# =========================================
# 1. Copie este arquivo para .env
# 2. Preencha os valores
# 3. NUNCA commite o arquivo .env (está no .gitignore)
# 4. Para produção, use variáveis de ambiente do sistema
